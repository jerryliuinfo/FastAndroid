<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <!--布局剪裁，高性能圆角处理-->
    <FrameLayout
        android:layout_width="108dp"
        android:layout_height="108dp"

        >




        <!--   背景图片-->
        <com.kidsedu.ui.widget.RoundImageView
            android:id="@+id/riv_apps_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/edu_color_blue"
            app:roundRadius="12dp" />

        <!--        遮罩 需要放到进度条ViewDownloadCenterView的下面，这样进度条的颜色才不会被覆盖-->
        <FrameLayout
            android:id="@+id/maskView"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:background="#7F000000"
            android:visibility="gone"
            >

        </FrameLayout>

        <!--  等待下载图片-->
        <ImageView
            android:id="@+id/iv_waiting"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="4dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_waiting_for_download"
            android:visibility="gone"
            />

        <!--  下载过程中 和 下载完成 试图-->
        <com.kidsedu.ui.widget.DownloadCenterView
            android:id="@+id/iv_download_complete"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="4dp"
            android:layout_gravity="center"
            app:download_color_download_handed="@color/color_download_handed"
            app:download_color_download_rest="@color/color_download_rest"
            />


        <!--    右上角的删除按钮-->
        <ImageView
            android:id="@+id/icon_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top|right"
            android:background="@drawable/ic_delete_square"
            android:visibility="gone"
            />



    </FrameLayout>



</FrameLayout>