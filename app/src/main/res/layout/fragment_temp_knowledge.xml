<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="我是文本 "
        />

    <Button
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_message"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="测试知识点"
        />

    <Button
        android:id="@+id/btn_textview_horizontal_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testTextViewHorizontalScroll"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:layout_constraintStart_toEndOf="@+id/tv_name"
        android:layout_marginStart="20dp"
        />
    <Button
        android:id="@+id/btn_collections_suffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collections.suffle"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:layout_constraintStart_toEndOf="@+id/btn_textview_horizontal_scroll"
        />

    <Button
        android:id="@+id/btn_linerlayoutCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LinerlayoutCompat"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:layout_constraintStart_toEndOf="@+id/btn_collections_suffle"
        />
</androidx.constraintlayout.widget.ConstraintLayout>