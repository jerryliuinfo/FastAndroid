<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


  <Button
      android:id="@+id/btn_skip_memory"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="禁用内存缓存"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <Button
      android:id="@+id/btn_custom_url"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="对图片url做处理后再加载"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn"
      />
  <Button
      android:id="@+id/btn_global_custom_url"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="全局处理图片url"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn_custom_url"
      />
  <ImageView
      android:id="@+id/image"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:scaleType="centerInside"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn_global_custom_url"
      />



</androidx.constraintlayout.widget.ConstraintLayout>