<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:flow_wrapMode="aligned"
        app:flow_horizontalGap="10dp"
        app:constraint_referenced_ids="btn_supervisorJob,btn_supervisorJob2,btn_tryCatch,
        btn_awaitException,btn_coroutineExceptionHandler"

        tools:ignore="NotSibling" />

    <Button
        android:id="@+id/btn_supervisorJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SupervisorJob" />
    <Button
        android:id="@+id/btn_supervisorJob2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SupervisorJob2" />
    <Button
        android:id="@+id/btn_tryCatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TryCatch" />

    <Button
        android:id="@+id/btn_awaitException"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="awaitException" />
    <Button
        android:id="@+id/btn_coroutineExceptionHandler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="coroutineExceptHandler" />



</androidx.constraintlayout.widget.ConstraintLayout>