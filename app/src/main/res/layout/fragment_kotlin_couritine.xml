<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            app:flow_horizontalGap="10dp"
            app:constraint_referenced_ids="btn_traditional_switch_thread,btn_suspendCoroutine,btn_retrofit_suspend,btn_retrofit_call,btn_job_dispatcher,
            btn_coroutine_switch_thread,btn_rxjava,btn_rxjava_zip,
            btn_couroutine_zip,btn_awaitAll,btn_couroutine_cance_job,btn_mainscope"
            app:flow_wrapMode="aligned"
            />
        <Button
            android:id="@+id/btn_traditional_switch_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="传统线程切换" />

        <Button
            android:id="@+id/btn_suspendCoroutine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SuspendCoroutine" />

        <Button
            android:id="@+id/btn_job_dispatcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job+Dispatcher" />


        <Button
            android:id="@+id/btn_coroutine_switch_thread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="协程线程切换" />
        <Button
            android:id="@+id/btn_retrofit_suspend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retrofit使用 Suspend修饰" />
        <Button
            android:id="@+id/btn_retrofit_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retrofit 返回 Call" />

        <Button
            android:id="@+id/btn_rxjava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="协程和Rxjava结合" />

        <Button
            android:id="@+id/btn_rxjava_zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rxjava合并两个请求" />

        <Button
            android:id="@+id/btn_couroutine_zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="协程合并两个请求" />

        <Button
            android:id="@+id/btn_awaitAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="awaitAll" />
        <Button
            android:id="@+id/btn_couroutine_cance_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用Job取消协程" />

        <Button
            android:id="@+id/btn_mainscope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MainScope 使用" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="48dp"
            android:text="Hello"
            style="@style/textView_black_16sp"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>