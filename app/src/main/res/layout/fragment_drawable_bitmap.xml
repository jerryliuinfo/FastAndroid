<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingDefaultResource">

        <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:constraint_referenced_ids="tv_bitmap_drawable,tv_shap_drawable,tv_statelist_drawable"
            />


        <TextView
            android:id="@+id/tv_bitmap_drawable"
            android:layout_width="200dp"
            android:layout_height="200dp"

            android:text="BitmapDrawable"
            android:gravity="center"
            android:background="@drawable/drawable_bitmap"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/tv_shap_drawable"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="ShapeDrawable"
            android:gravity="center"
            android:background="@drawable/drawable_shape"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/tv_statelist_drawable"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="StateListDrawable"
            android:gravity="center"
            android:background="@drawable/drawable_statelist"
            android:layout_marginBottom="10dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>







