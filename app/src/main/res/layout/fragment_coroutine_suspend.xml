<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:flow_wrapMode="aligned"
        app:flow_horizontalGap="10dp"
        app:constraint_referenced_ids="btn_default_order,btn_async_await,btn_lazy_start_async,btn_async_style,
        btn_async_concurrency,btn_child_coroutine_failed"
        tools:ignore="NotSibling" />


    <Button
        android:id="@+id/btn_default_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="默认顺序调用" />

    <Button
        android:id="@+id/btn_async_await"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asyn并发" />
    <Button
        android:id="@+id/btn_lazy_start_async"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lazy启动Aysnc" />
    <Button
        android:id="@+id/btn_async_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Async风格函数" />
    <Button
        android:id="@+id/btn_async_concurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Async结构化并发" />
    <Button
        android:id="@+id/btn_child_coroutine_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="子协程失败" />





</androidx.constraintlayout.widget.ConstraintLayout>