<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--TextView基本样式-->
    <style name="textView_base">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="textView_white" parent="textView_base">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="textView_black" parent="textView_base">
        <item name="android:textColor">@color/black</item>
    </style>





    <style name="textView_white_12sp" parent="textView_white">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="textView_white_14sp" parent="textView_white">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textView_white_18sp" parent="textView_white">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="textView_white_16sp" parent="textView_white">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="textView_black_12sp" parent="textView_black">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="textView_black_14sp" parent="textView_black">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textView_black_18sp" parent="textView_black">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="textView_black_16sp" parent="textView_black">
        <item name="android:textSize">16sp</item>
    </style>





</resources>