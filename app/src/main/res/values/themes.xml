<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AppTheme" parent="Base.Theme"/>

    <!--https://material.io/develop/android/theming/color-->
    <style name="Base.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- 应用程序屏幕和组件上显示最频繁的颜色。应用的主要色调,actionBar默认使用该颜色,Toolbar导航栏的底色，默认值#6200EE      -->
        <item name="colorPrimary">@color/purple_500</item>

        <!--    原色的色调变化。-->
        <item name="colorPrimaryVariant">@color/purple_700</item>

        <item name="colorOnPrimary">@color/white</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>



        <!--        应用程序的次要品牌颜色，通常是主要品牌颜色的重音补充。-->
        <item name="colorSecondary">@color/green_200</item>
        <!--        二次色的色调变化。-->
        <item name="colorSecondaryVariant">@color/green_500</item>
        <!--        在辅助颜色上绘制时，通过文本/图标可访问性指南的颜色。-->
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red_600</item>




        <!--        底部栏颜色-->
        <item name="android:navigationBarColor">#40000000</item>

        <item name="android:windowAnimationStyle">@style/anim_slide</item>

        <item name="textAllCaps">false</item>


        <!--        不允许多点触控-->
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>


        <!-- For Android sdk versions 26+. -->
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/opensans_font</item>
        <!-- Target Android sdk versions < 26 and > 14. -->
        <item name="fontFamily">@font/opensans_font</item>
        <!-- sets the style for the overflow button -->
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>

    </style>




    <!-- This style defines the tint color of the overflow menu button -->
    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorAccent</item>
    </style>


</resources>