<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apache.fastandroid"
    android:versionCode="100"
    android:versionName="V1.0.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:name="com.apache.fastandroid.app.FastAndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="FastAnd"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppCommonTheme" >
        <activity android:name="com.apache.fastandroid.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.apache.fastandroid.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity android:name="com.tesla.framework.ui.activity.FragmentContainerActivity" />

        <!--
        &lt;!&ndash; 配置信息 launch &ndash;&gt;
        <meta-data
            android:name="CHANNEL"
            android:value="${CHANNEL_VALUE}"/>

        &lt;!&ndash; value: 是否是测试环境 测试环境 TESTING 正式环境 PRD &ndash;&gt;
        <meta-data
            android:name="ISTEST"
            android:value="${ISTEST_VALUE}"/>
        -->

        <activity android:name="com.apache.fastandroid.artemis.LoginActivity" />

        <receiver android:name="com.tesla.framework.common.util.network.NetworkReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>