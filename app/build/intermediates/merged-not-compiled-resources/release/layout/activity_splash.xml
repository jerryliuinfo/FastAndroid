<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/lay_bg"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/splash_bg"
                android:orientation="vertical"
    >

    <TextView
        android:id="@+id/splash_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"/>

    <TextView
        android:id="@+id/splash_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="助您快速开发"
        style="@style/textView_white_14sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/splash_app_name"/>


    <TextView
        android:id="@+id/tv_count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/splash_countdown_bg"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:text="@string/splash_countdown_count"
        android:visibility="gone"
        />
    <com.apache.fastandroid.widget.SplashCountDownView
        android:id="@+id/splash_coutdown_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:text="@string/splash_countdown_count"
        android:visibility="gone"
        />

</RelativeLayout>