<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >


    <Button
        android:id="@+id/btn_traditional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="传统方式启动Activity"
        />
    <Button
        android:id="@+id/btn_result_api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ResultApi方式启动Activity"
        />

    <Button
        android:id="@+id/btn_request_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求权限"
        />
    <Button
        android:id="@+id/btn_take_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求拍摄图片"
        />

    <Button
        android:id="@+id/btn_custom_contract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义 Contract"
        />


    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/comm_red"
        />
    <ImageView
        android:id="@+id/iv_avator"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        />
</LinearLayout>